{
  "name": "lumber-inventory-management",
  "version": "1.0.0",
  "description": "木材（一枚板）在庫管理アプリ - Google Apps Script + スプレッドシート",
  "main": "dist/gas/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "push": "npm run build && clasp push",
    "push:watch": "clasp push --watch",
    "open": "clasp open",
    "deploy": "clasp deploy",
    "logs": "clasp logs",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "google-apps-script",
    "inventory-management",
    "lumber",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.83",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "gas-webpack-plugin": "^2.5.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
